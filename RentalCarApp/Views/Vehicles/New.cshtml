@model RentalCarApp.Models.Vehicle

<h3 class="text" ">Add vehicle</h3>
<br />

<div class="container mt-5">
    <div class="row">
        <div class="form">
            @using (Html.BeginForm(actionName: "New", controllerName: "Vehicles",
            method: FormMethod.Post))
            {
                @Html.Label("Name","Name of the vehicle")
                <br />
                @Html.TextBox("Name", null, new { @class = "form-control" })
                <br />

                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                <br />

                @Html.Label("Type","Type of the vehicle")
                <br />
                @Html.TextBox("Type", null, new { @class = "form-control" })
                <br />

                @Html.ValidationMessageFor(m => m.Type, "", new { @class = "text-danger" })
                <br />

                @Html.Label("Transmission","Transmission of the vehicle")
                <br />
                @Html.TextBox("Transmission", null, new { @class = "form-control" })
                <br />

                @Html.ValidationMessageFor(m => m.Transmission, "", new { @class = "text-danger" })
                <br />

                @Html.Label("NumberPassangers", "Number of passengers")
                <br />
                @Html.TextBoxFor(m => m.NumberPassengers, null , new { type="number" , @class = "form-control"})
                <br />
                @Html.ValidationMessageFor(m => m.NumberPassengers, "", new { @class = "text-danger" })
                <br />

                @Html.Label("NumberBags", "Number of bags")
                <br />
                @Html.TextBoxFor(m => m.NumberPassengers, null , new { type="number" , @class = "form-control"})
                <br />
                @Html.ValidationMessageFor(m => m.NumberPassengers, "", new { @class = "text-danger" })
                <br />

                @Html.Label("PricePerDay", "Price per day")
                <br />
                @Html.TextBoxFor(m => m.PricePerDay, null , new { type="number" , @class = "form-control"})
                <br />
                @Html.ValidationMessageFor(m => m.PricePerDay, "", new { @class = "text-danger" })
                <br />

                @Html.Label("Picture", "Image of the vehicle")
                <br />
                @Html.TextBox("Picture", null, new { @class = "form-control" })

                <br />
                

                <br />
                <br />
                <label>Select Make</label>
                <br />
                @Html.DropDownListFor(m => m.MakeId, new SelectList(Model.Mk, "Value", "Text"),
                "Select make", new { @class = "form-control" })
                <br />
                @Html.ValidationMessageFor(m => m.MakeId, null, new { @class = "text-danger" })
                <br />


                <button type="submit" class="btn btn-primary m-3">Add vehicle</button>
            }
        </div>

    </div>
</div>
